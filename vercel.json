{
  "version": 2,
  "builds": [
    { "src": "backend/src/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "backend/src/index.js" },
    { "src": "^(?!/api)(.*)$", "dest": "/index.html" }
  ]
}
